<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".presentation.HomeFragment">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:fontFamily="@font/montserrat_bold"
      android:gravity="center"
      android:text="@string/app_name"
      android:textColor="@color/white_regular"
      android:textSize="24sp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/corners_top_16dp"
      android:backgroundTint="@color/blue_medium"
      android:orientation="vertical"
      android:padding="16dp">

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:paddingVertical="16dp"
        android:text="Начать поиск"
        android:textColor="@color/white_regular"
        app:cornerRadius="12dp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:backgroundTint="@color/red_light"
        android:paddingVertical="16dp"
        android:textColor="@color/red_regular"
        android:text="История поиска"
        app:cornerRadius="12dp" />

  </LinearLayout>

</LinearLayout>